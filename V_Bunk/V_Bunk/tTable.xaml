                                <TextBlock x:Name="room" HorizontalAlignment="Left" Margin="185,69,0,0" TextWrapping="Wrap" Text="{Binding room}" VerticalAlignment="Top" Height="20" Width="81" FontSize="17.333" Style="{StaticResource ListViewEmptyStaticTextBlockStyle}"/>
                                <TextBlock x:Name="time" HorizontalAlignment="Left" Margin="20,69,0,0" TextWrapping="Wrap" Text="{Binding time}" VerticalAlignment="Top" Height="24" Width="150" FontSize="17.333" Style="{StaticResource ListViewEmptyStaticTextBlockStyle}"/>
                                <TextBlock x:Name="type" HorizontalAlignment="Left" Margin="316,70,0,0" TextWrapping="Wrap" Text="{Binding type}" VerticalAlignment="Top" Height="20" Width="74" FontSize="17.333" Style="{StaticResource ListViewEmptyStaticTextBlockStyle}"/>
                                <Grid HorizontalAlignment="Left" Height="94" Margin="0,2,0,2" VerticalAlignment="Top" Width="7" Background="#FF007ACC"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Wednesday    " Margin="0,0,0,0">
                <ListView x:Name="wedDay" HorizontalAlignment="Left" Height="466" Margin="0,0,0,0" VerticalAlignment="Top" Width="397" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Hidden">
